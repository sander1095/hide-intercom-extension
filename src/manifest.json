{
  "author": "Sander ten Brinke",
  "manifest_version": 2,
  "browser_specific_settings": {
    "gecko": {
      "id": "s.tenbrinke2@gmail.com",
      "strict_min_version": "92.0"
    },
    "gecko_android": {
      "strict_min_version": "113.0"
    }
  },
  "name": "Hide Intercom Messenger",
  "version": "1.0.0",
  "description": "Automatically hides Intercom chat widgets on all websites.",
  "icons": {
    "16": "logo-white-16.png",
    "32": "logo-white-32.png",
    "48": "logo-white-48.png",
    "128": "logo-white-128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "homepage_url": "https://github.com/sander1095/hide-intercom-extension",
  "browser_action": {
    "default_icon": {
      "16": "logo-white-16.png",
      "32": "logo-white-32.png",
      "48": "logo-white-48.png",
      "128": "logo-white-128.png"
    },
    "default_title": "Toggle Intercom Blocking",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "hide-intercom.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "<all_urls>",
    "activeTab",
    "storage",
    "tabs"
  ]
}