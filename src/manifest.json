{
  "manifest_version": 2,
  "name": "Hide Intercom Messenger",
  "version": "1.0",
  "description": "Automatically hides Intercom chat widgets on all websites.",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "hide-intercom.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "<all_urls>"
  ]
}